{
  "expo": {
    "name": "Zappson",
    "slug": "zappson",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/tv.png",
    "scheme": "zappson",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.zappson.app"
    },
    "android": {
      "package": "com.zappson.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/tv.png",
        "backgroundColor": "#FFD700"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/tv.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/tv.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFD700"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6b442e2d-441d-4a6a-b028-b4945a3fa140"
      }
    }
  }
}
